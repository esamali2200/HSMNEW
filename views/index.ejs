          <script>
            // Function to apply the filter
            function applyFilter() {
              const selectedDepartment = document.getElementById('Department').value;
              const rows = document.querySelectorAll("tbody tr");
          
              rows.forEach(row => {
                const departmentCell = row.cells[2].textContent; // Department is in the 3rd column (index 2)
          
                if (selectedDepartment === "" || departmentCell === selectedDepartment) {
                  row.style.display = ""; // Show row if it matches the department or if "All Departments" is selected
                } else {
                  row.style.display = "none"; // Hide row if it doesn't match the department
                }
              });
          
              applySearch(); // Apply search after filtering to update the visibility of search results
            }
          
            // Function to apply search
            function applySearch() {
              const searchValue = document.getElementById("searchInput").value.toLowerCase();
              const rows = document.querySelectorAll("tbody tr");
          
              rows.forEach(row => {
                const departmentCell = row.cells[2].textContent; // Department is in the 3rd column (index 2)
                const rowText = row.textContent.toLowerCase(); // All text in the row
          
                // Check if the row is visible (after department filter) and if it matches the search term
                if (row.style.display !== "none" && rowText.includes(searchValue)) {
                  row.style.display = ""; // Show row
                } else {
                  row.style.display = "none"; // Hide row
                }
              });
            }
          
            // Function to clear the search input
            function clearSearch() {
              document.getElementById("searchInput").value = ""; // Clear search input
              applySearch(); // Reset the table display
            }

            
